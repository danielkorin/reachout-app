<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_weight="0"
    android:gravity="center"
    tools:context="ca.sfu.iat381.reachout_app.views.CategoriesActivity"
    android:weightSum="1">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="2">



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/sportsBtn"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="10dp"
                app:srcCompat="@drawable/sports_icon"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="@string/sport_event_category">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/outdoorBtn"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="10dp"
                app:srcCompat="@drawable/outdoor_icon" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="@string/outdoor_event_category">

            </TextView>

        </LinearLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:background="@null"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sports_icon" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:padding="10dp"
            android:background="@null"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sports_icon" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:background="@null"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sports_icon" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:background="@null"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sports_icon" />

    </GridLayout>


    <ProgressBar
        android:id="@+id/progress_bar_fetchEvents"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        android:layout_height="wrap_content" />


</LinearLayout>
